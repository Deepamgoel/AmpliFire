<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/four_dp"
    android:gravity="center"
    android:orientation="horizontal"
    tools:background="@color/DarkTeal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/AliceBlue"
            android:textSize="@dimen/eighteen_sp"
            tools:text="xyz" />

        <TextView
            android:id="@+id/song_artist"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/four_dp"
            android:layout_marginTop="@dimen/four_dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/TransparentWhite"
            android:textSize="12sp"
            tools:text="xyz" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/songs_like"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_margin="@dimen/eight_dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/like"
        android:scaleType="fitXY"
        android:src="@drawable/heart_outline"
        android:tag="off"
        android:tint="@color/AliceBlue" />

    <ImageButton
        android:id="@+id/song_more"
        android:layout_width="@dimen/twenty_four_dp"
        android:layout_height="@dimen/twenty_four_dp"
        android:layout_margin="@dimen/sixteen_dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/more"
        android:scaleType="fitXY"
        android:src="@drawable/more"
        android:tint="@color/AliceBlue" />

</LinearLayout>